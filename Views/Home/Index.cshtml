@* here is the code from the home page for the projects  *@


<div class="products-4" id="gallery">
    <!-- Products4 block -->
    <div id="products4-block" class="text-center">
        <div class="container">
            @{
                var uniqueTitles = Model.Projects.Select(p => p.Project_Title.Title).Distinct();
                var counterr = 1;
            } <!-- Initialize counter outside the loop -->
            @foreach (var title in uniqueTitles)
            {
                var projectsWithTitle = Model.Projects.Where(p => p.Project_Title.Title == title).ToList();
                <input id="tab@(counterr)" type="radio" name="tabs" @(counterr == 1 ? "checked" : "")>
                <label class="tabtle" for="tab@(counterr)">@Html.Raw(title)</label>

                <section id="content@(counterr)" class="tab-content text-left">
                    <div class="d-grid grid-col-3">
                        @foreach (var PT in projectsWithTitle)
                        {
                            <div class="product">
                                <a href="@PT.Project_Image" data-lightbox="example-set"
                                   data-title="Lorem ipsum dolor sit amet consectetur adipisicing elit. Numquam architecto, ex veritatis">
                                    <figure>
                                        <img src="@PT.Project_Image" class="img-responsive" alt="" />
                                    </figure>
                                </a>
                            </div>
                        }
                    </div>
                </section>

                counterr++;
            }
        </div>
    </div>
    <!-- Products4 block -->
</div>




<script src="~/assets/js/jquery-3.3.1.min.js"></script>
<script src="~/assets/js/lightbox-plus-jquery.min.js"></script>
