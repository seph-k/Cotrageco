<section class="w3l-about-breadcrum">
    @foreach (var AB in Model.Banner)
    {
        <div class="breadcrum-bg" style="background-size: cover;
            background-image: linear-gradient(to right, rgba(42, 42, 42, 0.71), rgba(38, 40, 40, 0.78)), url('@AB.AboutUs_Banner');
            background-repeat: no-repeat, no-repeat, no-repeat;
            background-position: center;
            background-attachment: fixed;
            padding-top: 86px;">
            <div class="container py-5">
                <p><a href="index.html">Accueil</a> &nbsp; / &nbsp; À propos de nous</p>

                @foreach (var CC in Model.cotrageco_Contents)
                {
                    <h2 class="my-3">@Html.Raw(CC.AboutUs_Title)</h2>
                    <p>@Html.Raw(CC.AboutUs_Description)</p>
                    <!-- Missing AboutUs_Banner (in the stylesheet**) -->
                }
            </div>
        </div>
    }
</section>


<!-- content-with-photo4 block -->
<section class="w3l-content-with-photo-4" id="about">
    <div id="content-with-photo4-block" class="py-5">
        <div class="container py-md-3">
            <div class="cwp4-two row">

                @foreach (var IS in Model.Sectors_Of_Interventions)
                {
                    <div class="cwp4-text col-lg-6">
                        <h3>@Html.Raw(IS.Sectors_Title)</h3>
                        <p>@Html.Raw(IS.Sectors_Description)</p>
                    </div>
                    <div class="cwp4-image col-lg-6 pl-lg-5 mt-lg-0 mt-5">
                        <img src="@IS.Sectors_Image" class="img-fluid" alt="" />
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- content-with-photo4 block -->
<div class="w3l-about1 py-5" id="about">
    <div class="container py-lg-3">

        @foreach (var RS in Model.Registrations)
        {
            <div class="aboutgrids row">
                <div class="col-lg-6 aboutgrid2">
                    <img src="@RS.Registration_Image" alt="about image" class="img-fluid" />
                </div>
                <div class="col-lg-6 aboutgrid1 mt-lg-0 mt-4 pl-lg-5">
                    <h4> @Html.Raw(RS.Registration_Title)</h4>
                    <div class="points">
                        <ul>
                            <p> @Html.Raw(RS.Registration_Description)</p>
                        </ul>
                    </div>
                    <a class="btn btn-secondary btn-theme2" href="about.html"> Lire la suite</a>
                </div>
            </div>
        }

    </div>
</div>

