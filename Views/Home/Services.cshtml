<section class="w3l-about-breadcrum">
    @foreach (var SB in Model.Banner)
    {
        <div class="breadcrum-bg" style="  background-size: cover;
  background-image: linear-gradient(to right, rgba(42, 42, 42, 0.71), rgba(38, 40, 40, 0.78)), url('@SB.Services_Banner');
  background-repeat: no-repeat, no-repeat, no-repeat;
  background-position: center;
  background-attachment: fixed;
  padding-top: 86px;">
            <div class="container py-5">
                <p><a href="index.html">Accueil</a> &nbsp; / &nbsp; Nos Services</p>
                @foreach (var CC in Model.cotrageco_Contents)
                {
                    <h2 class="my-3">@Html.Raw(CC.Services_Title)</h2>
                    <p>@Html.Raw(CC.Services_Description)</p>
                }

            </div>
        </div>
    }
</section>

<div class="products-4" id="gallery">
    <!-- Products4 block -->
    <div id="products4-block" class="text-center">
        <div class="container">
            @foreach (var CC in Model.cotrageco_Contents)
            {
                <div class="heading text-center mx-auto mb-5">
                    <h3 class="head">@Html.Raw(CC.Realisations_Title)</h3>
                </div>
                <div>
                    <p>@Html.Raw(CC.Realisations_Description)</p>
                </div>
            }


            @foreach (var RC in Model.Our_Realisations)
            {
                var counter = 0;
                counter++;
                <input id="tab1" type="radio" name="tabs" checked>
                <label class="tabtle" for="tab1">@Html.Raw(RC.Realisation_Captions.Caption)</label>

                <section id="content1" class="tab-content text-left">
                    <div class="d-grid grid-col-3">
                        <div class="product">
                            <a href="~/assets/images/p1.jpg" data-lightbox="example-set"
                               data-title="Lorem ipsum dolor sit amet consectetur adipisicing elit. Numquam architecto, ex veritatis">
                                <figure>
                                    <img src="@RC.Realisation_Image" class="img-responsive" alt="" />
                                </figure>
                            </a>

                        </div>

                    </div>
                </section>
            }


        </div>
    </div>
    <!-- Products4 block -->
</div>

<section class="w3l-service-3" id="features">
    <div class="w3l-open-block-services py-5">
        <div class="container py-lg-3">

            <div class="heading text-center mx-auto">

                @foreach (var CC in Model.cotrageco_Contents)
                {
                    <h3 class="head">@Html.Raw(CC.Purpose_Title)</h3>
                    <p class="my-3 head ">@Html.Raw(CC.Purpose_Description)</p>

                }

            </div>


            <div class="row mt-5 pt-3">

                @foreach (var CP in Model.Corperate_Purposes)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card">

                            <h4 class="mission">@Html.Raw(CP.Purpose_Title)</h4>
                            <div class="icon-holder">
                                <span aria-hidden="true">  <img src="@CP.Purpose_Icon" alt="about image" class="img-fluid" /></span>
                            </div>
                            <div class="open-description">
                                <p>@Html.Raw(CP.Purpose_Description)</p>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>