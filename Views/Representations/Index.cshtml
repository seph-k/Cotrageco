@model IEnumerable<Cotrageco.Models.Representation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Representation_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Representation_Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Representation_Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Representation_Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RepresentationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RepresentationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RepresentationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
