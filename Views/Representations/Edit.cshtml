@model Cotrageco.Models.Representation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Representation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RepresentationId" />
            <div class="form-group">
                <label asp-for="Representation_Title" class="control-label"></label>
                <textarea id="summernote1" asp-for="Representation_Title" class="form-control"> </textarea>
                <span asp-validation-for="Representation_Title" class="text-danger"></span>
                <script>
                    $('#summernote1').summernote({
                        placeholder: 'Hello Bootstrap 4',
                        tabsize: 2,
                        height: 50
                    });
                </script>
            </div>
            <div class="form-group">
                <label asp-for="Representation_Description" class="control-label"></label>
                <textarea id="summernote2" asp-for="Representation_Description" class="form-control"> </textarea>
                <span asp-validation-for="Representation_Description" class="text-danger"></span>
                <script>
                    $('#summernote2').summernote({
                        placeholder: 'Hello Bootstrap 4',
                        tabsize: 2,
                        height: 50
                    });
                </script>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>